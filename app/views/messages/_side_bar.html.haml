.chat-side
  .side-header
    .side-header__username
      %p.side-header__username
        = current_user.name
      %ul.side-header__menu
        %li.side-header__edit-user
          =link_to new_group_path do
            =icon('fa', 'edit',class: 'icon')
        %li.side-header__box__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bottom
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message